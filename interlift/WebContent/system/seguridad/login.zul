<?taglib uri="http://www.zkoss.org/zkspring/security" prefix="sec"?>
<?variable-resolver class="org.zkoss.spring.DelegatingVariableResolver"?>
<zk xmlns:h="native">
	<style src="../../resource/style/styleZK.css"></style>
	<window width="100%">
		<h:form id="f" name="f" action="../../j_spring_security_check"
			method="POST" xmlns:h="native">
			<h:div class="container-fluid">
				<h:div class="row-fluid">
					<h:div class="span12">
						<label style="color:red"
							if="${not empty param.login_error}"
							value="Tu usuario o contrase単a son incorrectos. Intentalo de nuevo.">
						</label>
					</h:div>
				</h:div>
				<h:div class="row-fluid">
					<h:div class="span5">
						<h:div class="row-fluid">
							<label value="Usuario:"
								sclass="formLabel">
							</label>
						</h:div>
						<h:div class="row-fluid">
							<textbox hflex="1" id="u" name="j_username"
								mold="rounded" />
						</h:div>
					</h:div>
					<h:div class="span5">
						<h:div class="row-fluid">
							<label value="Contrase単a:"
								sclass="formLabel">
							</label>
						</h:div>
						<h:div class="row-fluid">
							<textbox hflex="1" id="p" name="j_password"
								type="password" mold="rounded" />
						</h:div>
					</h:div>
					<h:div class="span2">
						<h:div class="row-fluid hidden-phone"
							style="padding-top: 17px">
						</h:div>
						<h:div class="row-fluid">
							<button type="submit" label="Entrar"
								mold="trendy">
							</button>
						</h:div>
					</h:div>
				</h:div>
				<h:div class="row-fluid">
					<h:div class="span12">
						<checkbox id="r"
							name="j_spring_security_remember_me" />
						<label value="No olvidar mi clave."></label>
					</h:div>
				</h:div>
			</h:div>
